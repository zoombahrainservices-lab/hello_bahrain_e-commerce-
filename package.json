{
  "name": "hellobahrain-ecommerce",
  "version": "1.0.0",
  "description": "Full-stack e-commerce application with Next.js",
  "private": true,
  "workspaces": [
    "client"
  ],
  "scripts": {
    "dev": "cd client && npm run dev",
    "dev:client": "cd client && npm run dev",
    "install:all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "start": "cd client && npm start",
    "start:client": "cd client && npm start"
  },
  "devDependencies": {
    "@types/pg": "^8.15.6",
    "concurrently": "^8.2.2",
    "pg": "^8.16.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
